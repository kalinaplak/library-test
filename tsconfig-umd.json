{
    "compilerOptions": {
        "module": "es2015",
        "outDir": "./bundle/esm",  
        "noEmitHelpers": true,
        "target": "es5",
        "lib": ["es2015", "dom"],        
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,        
        "declaration": true,
        "sourceMap": false
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
     "include": [
        "src/**/*.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true
    }
}